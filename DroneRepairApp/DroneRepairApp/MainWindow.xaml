<Window x:Class="DroneRepairApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:DroneRepairApp"
        mc:Ignorable="d"
        Title="Daedalus -Drone Repair-" Height="673" Width="1018">
    <Grid Height="663" VerticalAlignment="Top">
        <Border BorderBrush="#FF656565" BorderThickness="1" HorizontalAlignment="Left" Height="300" Margin="10,10,0,0" VerticalAlignment="Top" Width="371"/>


        <Border BorderBrush="#FF656565" BorderThickness="1" HorizontalAlignment="Left" Height="289" Margin="10,336,0,0" VerticalAlignment="Top" Width="371"/>


        <Border BorderBrush="#FF656565" BorderThickness="1" HorizontalAlignment="Left" Height="309" Margin="391,313,0,0" VerticalAlignment="Top" Width="617"/>


        <Border BorderBrush="#FF656565" BorderThickness="1" HorizontalAlignment="Left" Height="299" Margin="391,9,0,0" VerticalAlignment="Top" Width="617"/>


        <StatusBar Margin="0,630,0,3" RenderTransformOrigin="0.5,0.5">
            <StatusBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </StatusBar.RenderTransform>
        </StatusBar>

        <Button x:Name="RegFinishButton" Content="Finish Order" HorizontalAlignment="Left" Margin="909,16,0,0" VerticalAlignment="Top" Height="36" Width="89"
                Click="FinishRegularOrder"/>
        <Label x:Name="RegQLabel" Content="Regular Queue" HorizontalAlignment="Left" Margin="405,16,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.119,0.955" Height="36" Width="131" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <ListView x:Name="RegularListView" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="405,54,20,367"
                  MouseLeftButtonUp="RegularListView_Click">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Tag" Width="50" DisplayMemberBinding="{Binding Tag}" />
                    <GridViewColumn Header="Client" Width="100" DisplayMemberBinding="{Binding Client}" />
                    <GridViewColumn Header="Model" Width="100" DisplayMemberBinding="{Binding Model}" />
                    <GridViewColumn Header="Repair" Width="223" DisplayMemberBinding="{Binding Description}" />
                    <GridViewColumn Header="Cost" Width="100" DisplayMemberBinding="{Binding Cost}" />
                </GridView>
            </ListView.View>
        </ListView>

        <Button x:Name="ExpFinishButton" Content="Finish Order" HorizontalAlignment="Left" Margin="909,318,0,0" VerticalAlignment="Top" Height="36" Width="89"
                Click="FinishExpressOrder"/>
        <Label x:Name="ExpQLabel" Content="Express Queue" HorizontalAlignment="Left" Margin="405,318,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.119,0.955" Height="36" Width="131" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <ListView x:Name="ExpressListView" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="405,356,20,49"
                  MouseLeftButtonUp="ExpressListView_Click">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Tag" Width="50" DisplayMemberBinding="{Binding Tag}" />
                    <GridViewColumn Header="Client" Width="100" DisplayMemberBinding="{Binding Client}" />
                    <GridViewColumn Header="Model" Width="100" DisplayMemberBinding="{Binding Model}" />
                    <GridViewColumn Header="Repair" Width="223" DisplayMemberBinding="{Binding Description}" />
                    <GridViewColumn Header="Cost" Width="100" DisplayMemberBinding="{Binding Cost}" />
                </GridView>
            </ListView.View>
        </ListView>

        <RadioButton x:Name="RegOrderRadio" Content="Regular Order" HorizontalAlignment="Left" Margin="244,54,0,0" VerticalAlignment="Top" 
                     RenderTransformOrigin="0.766,0.136"
                     GroupName="ServiceType"/>
        <RadioButton x:Name="ExpOrderRadio" Content="Express Order" HorizontalAlignment="Left" Margin="244,79,0,0" VerticalAlignment="Top"
                     GroupName="ServiceType"/>
        <TextBox x:Name="ClientInput" HorizontalAlignment="Left" Margin="93,70,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <xctk:IntegerUpDown x:Name="TagInput"
        Width="120"
        Minimum="100"
        Maximum="900"
        Increment="10"
        Value="0"
        HorizontalContentAlignment="Center" Margin="94,23,804,608"/>
        <TextBox x:Name="ModelInput" HorizontalAlignment="Left" Margin="93,105,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="CostInput" HorizontalAlignment="Left" Margin="93,138,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"
                 TextChanged="CostInput_TextChanged"/>
        <TextBox x:Name="DescriptionInput" HorizontalAlignment="Left" Margin="93,174,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top"
                 VerticalScrollBarVisibility="Auto"
                 AcceptsReturn="True"
                 Width="260" Height="116"/>
        <Button x:Name="NewOrderButton" Content="New Order" HorizontalAlignment="Left" Margin="248,114,0,0" VerticalAlignment="Top" Height="36" Width="89"
                Click="AddNewItem"/>

        <Label x:Name="TagLabel" Content="Service Tag" HorizontalAlignment="Left" Margin="10,22,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.119,0.955" Height="36" Width="78" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="ClientLabel" Content="Client Name" HorizontalAlignment="Left" Margin="10,66,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.119,0.955" Height="26" Width="78" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="ModelLabel" Content="Model Name" HorizontalAlignment="Left" Margin="10,101,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.119,0.955" Height="26" Width="78" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="CostLabel" Content="Cost" HorizontalAlignment="Left" Margin="10,134,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.119,0.955" Height="26" Width="78" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="DescriptionLabel" Content="    Repair&#xA;Description" HorizontalAlignment="Left" Margin="10,160,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.119,0.955" Height="58" Width="78" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="AddNewLabel" Content="Add New Order" HorizontalAlignment="Left" Margin="279,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.119,0.955" Height="29" Width="100" HorizontalContentAlignment="Right" VerticalContentAlignment="Top"/>

        <ListBox x:Name="FinishedListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="19,381,646,100"
                 MouseDoubleClick="FinishedListBox_DoubleClick"/>
        <Label x:Name="FinishedViewLabel" Content="Finished Orders" HorizontalAlignment="Left" Margin="130,340,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.119,0.955" Height="36" Width="131" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="ClearFinishedButton" Content="Pay and Clear" HorizontalAlignment="Left" Margin="151,578,0,0" VerticalAlignment="Top" Height="36" Width="89"
                Click="ClearFinishedOrder"/>



    </Grid>
</Window>
