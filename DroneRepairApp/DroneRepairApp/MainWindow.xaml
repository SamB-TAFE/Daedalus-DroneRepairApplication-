<Window x:Class="DroneRepairApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DroneRepairApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="656" Width="800">
    <Grid Height="656" VerticalAlignment="Top">
        <StatusBar Margin="0,620,0,10" RenderTransformOrigin="0.5,0.5">
            <StatusBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </StatusBar.RenderTransform>
        </StatusBar>
        <Button Content="Button" HorizontalAlignment="Left" Margin="701,9,0,0" VerticalAlignment="Top" Height="36" Width="89"/>
        <Label Content="Regular Queue" HorizontalAlignment="Left" Margin="415,9,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.119,0.955" Height="36" Width="131" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <ListView d:ItemsSource="{d:SampleData ItemCount=5}" Margin="415,48,10,357">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Button" HorizontalAlignment="Left" Margin="701,299,0,0" VerticalAlignment="Top" Height="36" Width="89"/>
        <Label Content="Express Queue" HorizontalAlignment="Left" Margin="415,299,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.119,0.955" Height="36" Width="131" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <ListView d:ItemsSource="{d:SampleData ItemCount=5}" Margin="415,338,10,41">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
